    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Номер")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Room_num)
        </dd>

        <dt>
            @Html.DisplayName("Этаж")
        </dt>

        <dd>
