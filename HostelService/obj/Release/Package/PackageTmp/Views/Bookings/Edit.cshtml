@model HostelService.Models.Booking

@{
    ViewBag.Title = "Редактирование";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Бронирование</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Receipt_ID)

        <div class="form-group">
            @Html.Label("Дата бронирования", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <!--Html.EditorFor(model => model.Receipt_date, new { htmlAttributes = new { class = "form-control" } })-->
                <!--Html.ValidationMessageFor(model => model.Receipt_date, "Поле должно быть заполнено", new { class = "text-danger" })-->
                <input type="date" name="receipt_date" value="@Model.Receipt_date.ToString("yyyy-MM-dd")" class="form-control" />

                @Html.ValidationMessage("Receipt_date", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Дата заселения", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <!--Html.EditorFor(model => model.Arrival_date, new { htmlAttributes = new { class = "form-control" } })-->
                <input type="date" name="arrival_date" value="@Model.Arrival_date.ToString("yyyy-MM-dd")" class="form-control" />
                @Html.ValidationMessageFor(model => model.Arrival_date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Дата выселения", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <!--Html.EditorFor(model => model.Departure_date, new { htmlAttributes = new { class = "form-control" } })-->
                <input type="date" name="departure_date" value="@Model.Departure_date.ToString("yyyy-MM-dd")" class="form-control" />
                @Html.ValidationMessageFor(model => model.Departure_date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Посетитель", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Client_ID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Client_ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Комната", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Room_ID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Room_ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Назад", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
