@model HostelService.Models.Payment

@{
    ViewBag.Title = "Удаление";
}


<h3>Вы уверены, что хотите удалить данную запись?</h3>
<div>
    <h4>Текущая квитанция</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Клиент")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Client.Surname)
            @Html.DisplayFor(model => model.Client.FName)
            @Html.DisplayFor(model => model.Client.Second_name)
        </dd>

        <dt>
            @Html.DisplayName("Комната")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Room.Room_num)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            @Html.ActionLink("Назад", "Index")
        </div>
    }
</div>
